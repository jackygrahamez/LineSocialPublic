<section class="content">

<% include subpage_header %>
<div id="wrapper">
	<h2 class="light no-margin">Profile</h2>
    <section class="bordered">
		<ul>
		<% if (messages_doc[0]) { %>
			<% for(var i=0; i<messages_doc[0].thread.length; i++) {%>
			messages_doc[0].thread[i] <%= messages_doc[0].thread[i] %>
				<% if (cID) {%> 
					messages_doc[0].thread[i].fID <%= messages_doc[0].thread[i].fID %>
					user._id <%= user._id %>
					<% if (true) {%> 			
						<li>
						<form id="form<%= i %>" method="post" action="/<%= user.username %>/user_message/" class="form-skin">
						User: <%= messages_doc[0].thread[i].username %>
						<label>cID:</label>
						<fieldset>
						  <input id="cID" type="text" name="cID" value="<%= cID %>" />
						</fieldset>			
						<label>fID:</label>
						<fieldset>
						  <input id="fID" type="text" name="fID" value="<%= cID %>" />
						</fieldset>
						<label>tID:</label>			
						<fieldset>
						  <input id="tID" type="text" name="tID" value="<%= messages_doc[0].thread[i].tID %>" />
						</fieldset>
						<p>
						  <input type="submit" value="Message" class="btn btn-flat btn-blue no-radius"/>
						</p>	
						</form>
						</li>
					<% } %>			
				<% } %>
			<% } %>		
		<% } %>		
		</ul>
    </section>
</div>
</section>
