<section class="notifications right">
<!--notifications -->
<% include subpage_header %>
<div id="wrapper">
	<h2 class="light no-margin">Line Pokes</h2>
    <section class="chat_requests bordered">
    <ul><%- requests %></ul>
    <div class="accordion off">
	    <div id="content"><%- message %></div>
	    <div class="message controls">
			<input class="hide cID" value="<%= user.check_in.cID %>" />       
			<input class="hide fID" value="<%= user._id %>" />
			<input class="hide tID"  />    		
			<input id="name" placeholder="name" value="<%= user.username %>" /> 
	        <input id="field" class="field" placeholder="field" />
	        <input id="send" class="send" type="button"  value='send' />
	    </div>
    </div>
    </section>
</div>
</section>

<script type="text/javascript">
 

$(document).ready(function(){
    global_tID = ""; 	
    var messages = [];
    var socket = io.connect(location.origin);
    var field = document.getElementById("field");
    var sendButton = document.getElementById("send");
    var content = document.getElementById("content");
    var name = document.getElementById("name"); 
	$(".message.controls .cID").val(global_cID);
	$(".message.controls .tID").val(global_tID);
	global_cID = $(".message.controls .cID").val();   
	global_fID = $(".message.controls .fID").val();  
	if ($("#content").text().length > 0) {
		$(".accordion").removeClass("off");
		$("send").click();
	}
	    
	var nPokes = $(".chat_requests ul li").length;
	
	if (parseInt(nPokes) > 0) {
	$(".line_pokes div").text(nPokes);    
	}
	    
    socket.on('message', function (data) {
        if(data.message) {
            messages.push(data);
            var html = '';
            var chat_requests = '';            
            var fIDlist = [];
		 	global_cID = $(".message.controls .cID").attr("value");
			global_fID = $(".message.controls .fID").attr("value");              
 			global_tID = $(".message.controls .tID").attr("value");
 			   
	            for(var i=0; i<messages.length; i++) {
	            if (messages[i].cID == global_cID) {
		            if (typeof(messages[i].username) != 'undefined' && messages[i].fID != global_fID) {
	            		fIDlist.push(messages[i].username+"_"+messages[i].fID);
	            		}
		                html += '<p cID="'+messages[i].cID+'" fID="'+messages[i].fID+'" tID="'+messages[i].tID+'"<b>' + (messages[i].username ? messages[i].username : 'Server') + ': </b>';
		                html += messages[i].message + '</p>';
					}
	            }

	       var fIDlistArrayUnique = ArrNoDupe(fIDlist);
	       if (html.length > 0) {        
           		//content.innerHTML = html;
           		$("#content").append(html);
           }
           if (fIDlistArrayUnique.length > 0) {
           		$(".line_pokes div").replaceWith("<div>"+fIDlistArrayUnique.length+"</div>");
           } else {
           		$(".line_pokes div").addClass("hide");
           }
           if (global_tID) {
           		$(".accordion #content p").each(function(){
           			if (($(this).attr("fid") == global_tID) || ($(this).attr("tid") == global_tID)) {
           				$(this).show();
           			}
           			else {
           				$(this).hide();
           			}
           		});
           }
            for(var i=0; i<fIDlistArrayUnique.length; i++) {
	            var ufID = fIDlistArrayUnique[i].split("_").pop();
	            fIDlistArrayUnique[i].split("_").pop();
	            chat_requests += '<li ufid="'+ufID+'">' + fIDlistArrayUnique[i].split("_")[0] + '</li>';
				$(".message.controls .cID").val(global_cID);
				$(".message.controls .tID").val(global_tID);
				$(".message.controls .fID").val(global_fID); 		            
            }
            if (chat_requests.length > 0) {
	            $(".chat_requests ul").html(chat_requests);
	        }
	       $(".chat_requests ul li").click(function() {
	       		var notification_class = $(this).attr("ufid");
	       		global_tID = notification_class;
				$(".message.controls .tID").attr("value", global_tID);	       		
	       		$(".accordion").toggleClass("off");
	       		$(".accordion p").hide();
	       		$(".accordion ."+notification_class).show();
           		$(".accordion #content p").each(function(){
           			if (($(this).attr("fid") == global_tID) || ($(this).attr("tid") == global_tID)) {
           				$(this).show();
           			}
           			else {
           				$(this).hide();
           			}
           		});	   
            var all_content = $("#content").html();
            var requests = $(".chat_requests > ul ").html();    
            var url = "/"+name.value+"/update_notification_messages/";
            global_fID = $(".message.controls .fID").attr("value"); 
            global_cID = $(".message.controls .cID").attr("value");           
			//updateNotificationMessages(global_cID, global_fID, all_content, url, requests);           		    			
	       });            
	       
        } else {
            console.log("There is a problem:", data);
        }
    });
 
    sendButton.onclick = function() {
    	var d = new Date();
        if(name.value == "") {
            alert("Please type your name!");
        } else {
    		var time = " " + d.getHours() + ":" + d.getMinutes();
            var text = field.value;
	    	text = text + time; 
	    	global_tID = $(".message.controls .tID").attr("value");      
            socket.emit('send', { cID: global_cID, fID: global_fID, tID: global_tID, message: text, username: name.value });
        }
    };
 
 
});
</script>