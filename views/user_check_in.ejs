<% include header %>

<section class="content">
    <header class="content-header">
		<h2>Check-in</h2>
    </header>
    <section class="bordered">
        <div class="container-fluid">
        	<p><%= checkin_status %></p>
        	<ul>
			<li class="arrow">AT LEAST 30 MINUTES<span onclick="getLocation(30)" class="right">Check-In</span></li>
			<li class="arrow">AT LEAST 1 HOUR<span onclick="getLocation(30)" class="right">Check-In</span></li>
			<li class="arrow">MAYBE 2 HOURS!<span onclick="getLocation(30)" class="right">Check-In</span></li>
			<li class="arrow">AT LEAST A DAY!<span onclick="getLocation(30)" class="right">Check-In</span></li>        
			<form method="post" action="/<%= user.username %>/user_check_in/" class="form-skin">
				<fieldset>
				  <p id="demo">How Long Is The Line:</p>
				  <label>My Location:</label>
				  <input id="location" type="text" name="location" placeholder="Location" />
				  <input class="hide" id="coords" type="text" name="geolocation" placeholder="geolocation" />
				  <input class="hide" id="line_length" type="text" name="line_length" placeholder="length" />
				</fieldset>						
				<p>
				  <input type="submit" value="check in" class="btn btn-flat btn-blue no-radius"/>
				</p>
			</form>
        </div>    
    </section>
</section>

<% include footer %>