<section class="body right">
<!--messages-->
<% include subpage_header %>
<div id="wrapper">
	
	<div id="wrapper">
	<h2 class="light no-margin">Messages</h2>

    <section class="chat_requests bordered">

    <div class="content messages">
    	<%- message %>
    </div>
    <div class="message controls">
		<input class="hide cID" />       
		<input class="hide fID" value="<%= user._id %>" />
		<input class="hide tID"  />    		
		<input id="name" placeholder="name" value="<%= user.username %>" /> 
        <input id="field" class="field" placeholder="field" />
        <input id="send" class="send" type="button"  value='send' />
    </div>
    </section>
</div>
</section>


<script type="text/javascript">
$(document).ready(function(){

    var messages = [];
    var socket = io.connect(location.origin);
    var field = document.getElementById("field");
    var sendButton = document.getElementById("send");
    var content = $(".content.messages");
    var name = document.getElementById("name");
    var match = false;
	$(".message.controls .cID").attr("value", global_cID);
	$(".message.controls .tID").attr("value", global_tID);
	global_fID = $(".message.controls .fID").val();      	 
    socket.on('message', function (data) {
    console.log("data "+data);
        if(data.message) {
            messages.push(data);
			console.log("global_cID "+global_cID);            
            console.log("data.message "+data.message);
            var html = $(".content.messages").html();
            var chat_requests = '';            
            var fIDlist = [];
			global_fID = $(".message.controls .fID").attr("value");
			console.log("messages.length "+messages.length);
	            for(var i=0; i<messages.length; i++) {
	            if ((messages[i].cID == $(".message.controls .cID").attr("value")) && 
	            	((messages[i].fID == $(".message.controls .fID").attr("value")) || 
	            	(messages[i].tID == $(".message.controls .fID").attr("value"))	
	            	)) {	
	            	$(".content.messages p").each(function(){
	            		if ($(this).attr("ts") == messages[i].ts) {
	            			match = true;
	            		}
	            	});
		            	if (!match) {
		                html += '<p ts="'+messages[i].ts+'" cID="'+messages[i].cID+'" fID="'+messages[i].fID+'" tID="'+messages[i].tID+'"><b>' + (messages[i].username ? messages[i].username : 'Server') + ': </b>';
		                html += messages[i].message + '</p>';
		                }
		                match = false;
					}	                
	            }

	       console.log("html "+html);   
           //content.innerHTML = html;
           $(".content.messages").html(html);
	       
        } else {
            console.log("There is a problem:", data);
        }
    });
 
    sendButton.onclick = function() {
    	console.log("click");
    	var d = new Date();
        if(name.value == "") {
            alert("Please type your name!");
        } else {
    		var time = " " + d.getHours() + ":" + d.getMinutes();
    		var timestamp = d.getTime();
            var text = field.value;
	    	var text = text + time;    
            socket.emit('send', { ts: timestamp, cID: global_cID, fID: global_fID, tID: global_tID, message: text, username: name.value });
            var html = $(".content.messages").html();
            html += '<p ts="'+timestamp+'" cID="'+global_cID+'" fID="'+global_fID+'" tID="'+global_tID+'"><b>' + name.value + ': </b>';
            html += text + '</p>';
            console.log("html ");            
            var url = "/"+name.value+"/update_messages/";
            console.log("url " +url);
            updateMessages(global_cID, global_fID, global_tID, html, url);
        }
    };
 
});
</script>