<% include header %>
  <div class="container hero-unit">
  <h2><%= l('Password Reset') %></h2>
    <form id='captcha' method="POST" action="/forgot">
    	<p><%= shape %></p>
        <div id="mc">
            <canvas id="mc-canvas" class="<%= error ? 'mc-invalid' : '' %>"></canvas>
        </div>    
      <input type="text" name="email" value="<%= l('you@example.com') %>">
      <input id="submit" type="submit" value="<%= l('forgot password') %>">
    </form>
  </div>  
<%include footer %>
<script type="text/javascript">
        (function() {
                $('#captcha').motionCaptcha('<%= shape %>');
        })();
</script>
