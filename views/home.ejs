<% include header %>


<section class="content">
	<div class="wrapper">
	    <h2 class="light no-margin"><%= user.name.first %> <%= user.name.last %></h2>
	
	    <section class="bordered">
	        <div class="container-fluid">
				<% include nav %>
				<input class="hide cID" value="<%= user.check_in.cID %>" />
	        </div>
	    </section>
	</div>    			
</section>


<% include footer %>

<script type="text/javascript">
$(document).ready(function() {
	if ($(".cID").attr("value") != "undefined") {
		autocheckout();
	}
	var notification_url = "/<%= user.username %>/user_notifications/"; 
	getNotifications(notification_url);
	
    $(".footer li[name='contact']").click(function(){
       console.log("contact");
       $("#captcha").remove();     	
       var contact_form = '<form id="captcha" method="POST" action="/contact">' +
        '	<input type="text" id="contactName" name="name" placeholder="<%= l('Name') %>"> '+
        '	<input type="email" id="contactEmail" name="email" placeholder="<%= l('Email') %>"> '+
        '	<input type="text" id="contactMessage" name="message" placeholder="<%= l('Message') %>"> '+
		'<div id="mc">'+
        '    <canvas id="mc-canvas" class="<%= error ? "mc-invalid" : "" %>"></canvas>'+
        '</div>'+  
        '<input id="submit" type="submit" value="<%= l('Send Message') %>">'+
        '</form>';
        $(".footer li.contact").append(contact_form); 
        $('#captcha').motionCaptcha('<%= shape %>');	
    });	
});
</script>